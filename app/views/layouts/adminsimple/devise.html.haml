!!!
%html(id="adminsimple_#{Adminsimple.configuration.themes[0]}")
  %head
    %title= t('adminsimple.site_name')
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    = rescued_csrf_meta_tags
    :javascript
      if(typeof Storage !== undefined && localStorage.theme) {document.querySelector('html').setAttribute('id', "adminsimple_" + localStorage.theme);}
    = stylesheet_link_tag 'adminsimple'
    = stylesheet_link_tag Adminsimple.configuration.app_css_overrides if Adminsimple.configuration.app_css_overrides

  %body{class: "sign-in devise_controller #{body_class if respond_to?(:body_class)}"}
    = render partial: '/adminsimple/layout/navbar'
    #sign_in= yield
    = javascript_include_tag "#{Adminsimple.configuration.app_js_overrides ? Adminsimple.configuration.app_js_overrides : 'adminsimple'}"
